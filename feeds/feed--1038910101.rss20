		<pubDate>Thu, 24 Jul 2008 22:20:20 +0000</pubDate>
		<dc:creator>Wayne Sutton</dc:creator>
		
		<category><![CDATA[Opinion]]></category>

		<category><![CDATA[Web 2.0]]></category>

